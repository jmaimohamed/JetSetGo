<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_color_background"
    tools:context=".UserAccountF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/All_User"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/buttonloginsignup"
            android:text="All Users"
            android:textColor="#2799A5"
            android:textSize="22sp"
            android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/buttonloginsignup"
                android:text="My Inforamtion"
                android:textColor="#2799A5"
                android:textSize="22sp"
                android:textStyle="bold" />






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Spes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/buttonloginsignup"
            android:ems="10"
            android:hint="Magic ✨✨"
            android:textAlignment="center"
            android:textColor="#2799A5"
            android:textSize="20dp"
            android:textColorHint="#2799A5"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/selfie"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>



</FrameLayout>