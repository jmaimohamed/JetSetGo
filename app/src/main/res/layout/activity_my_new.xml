<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyNewActivity">

    <!-- Main Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Child LinearLayout for Vertical Scrolling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- AutoCompleteTextView for User Input -->
            <AutoCompleteTextView
                android:id="@+id/questionAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Saisissez votre question"
                android:inputType="text"
                android:padding="8dp"/>

            <!-- TextView for Displaying Chat Messages -->
            <TextView
                android:id="@+id/chatView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text=""
                android:textSize="14sp"/>

            <!-- TextView for Displaying Location Status -->
            <TextView
                android:id="@+id/locationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec"
                android:padding="8dp"
                android:text=""
                android:textSize="14sp"/>

            <!-- Button for Sending User Input -->
            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Envoyer"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
