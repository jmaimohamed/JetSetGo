<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment2">



    <!-- TODO: Update blank fragment layout -->
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_1"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="0dp">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:layout_editor_absoluteY="400dp">

        <EditText
            android:id="@+id/Id_depenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="220dp"
            android:ems="10"
            android:hint="entrez le budget Ã  depenser"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/textCategories"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Categories"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:layout_marginBottom="90dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/imageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/image_selector"
                android:textOn=""
                android:textOff=""
                />

            <ToggleButton
                android:id="@+id/IdAccomodation1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/hotel_selector"
                />

            <ToggleButton
                android:id="@+id/IdShopping1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/shopping_selector"
                android:textOn=""
                android:textOff=""
                android:layout_marginLeft="20dp"/>


            <ToggleButton
                android:id="@+id/IdTransport1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/transport_selector"
                android:layout_marginLeft="20dp"
                android:textOn=""
                android:textOff=""
                />

            <ToggleButton
                android:id="@+id/IdLoisir1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/accessibility_selector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textOn=""
                android:textOff=""
                />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/IDButton_Ajouter"
            android:layout_width="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonsuivant"
            android:text="Ajouter"
            android:textColor="#2799A5"
            android:textSize="22sp"
            android:textStyle="bold"
            />

    </LinearLayout>




</FrameLayout>